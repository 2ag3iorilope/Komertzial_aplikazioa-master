<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Spinner para seleccionar el pedido -->
    <Spinner
        android:id="@+id/spinnerPedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Selecciona un pedido"/>

    <!-- RecyclerView para mostrar los detalles de los productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDetalles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- BotÃ³n para guardar los cambios -->
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Cambios"/>
</LinearLayout>
